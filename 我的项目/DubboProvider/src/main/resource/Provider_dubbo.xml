<?xml version="1.0" encoding="UTF-8"?>  
<beans xmlns="http://www.springframework.org/schema/beans"  
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
       xmlns:context="http://www.springframework.org/schema/context"  
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"  
       xsi:schemaLocation="http://code.alibabatech.com/schema/dubbo  
           http://code.alibabatech.com/schema/dubbo/dubbo.xsd  
           http://www.springframework.org/schema/beans   
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd  
           http://www.springframework.org/schema/context  
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           ">
           
    
     <!-- 使用zookeeper注册中心暴露服务地址 -->  
    <dubbo:registry address="zookeeper://127.0.0.1:2181" />  
   
   <!-- 提供方应用名，用于计算依赖关系，不是匹配条件，不要与提供方一样 -->  
   	<dubbo:application name="Provider-app"  />  
   
    <!-- 用dubbo协议在20880端口暴露服务 -->  
    <dubbo:protocol name="dubbo" port="20880" />  
   
    <!-- 和本地bean一样实现服务 -->  
    <bean id="testInterface" class="liu.DubboProvider.TestInterfaceImpl" /> 
	
    <!-- 声明需要暴露的服务接口 -->  
	<dubbo:service interface="liu.common.TestInterface" ref="testInterface"></dubbo:service>
</beans>